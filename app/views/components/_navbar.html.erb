<div class="navbar navbar-expand-sm navbar-light navbar-lewagon col-12">
  <div class="navbar-left-side mt-auto">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "joker.png" %>
    <% end %>
    <button id="sidebarCollapse" class="sidebar-button">
      <%= image_tag "logo.png" %>
    </button>
  </div>

  <div class="search-bar col-6 mr-auto">
    <% if controller_name == 'comedians' && action_name == 'index' %>
    <%= render 'components/search-bar' %>
    <% end %>
  </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <%= image_tag "profile-icon.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

